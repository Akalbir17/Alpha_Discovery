# Alpha Discovery Environment Variables Template
# Copy this file to .env and fill in your actual values
# Never commit the actual .env file to version control

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# MARKET DATA API KEYS
# =============================================================================

# Primary Exchange APIs
NASDAQ_API_KEY=your_nasdaq_api_key_here
NYSE_API_KEY=your_nyse_api_key_here

# Alternative Data Providers
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
QUANDL_API_KEY=your_quandl_api_key_here
IEX_CLOUD_API_KEY=your_iex_cloud_api_key_here

# Options Data
CBOE_API_KEY=your_cboe_api_key_here
TRADIER_API_KEY=your_tradier_api_key_here

# Cryptocurrency APIs
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# News and Economic Data
REUTERS_API_KEY=your_reuters_api_key_here
BLOOMBERG_API_KEY=your_bloomberg_api_key_here

# =============================================================================
# BROKER APIs
# =============================================================================

# Interactive Brokers
IB_CLIENT_ID=your_ib_client_id_here
IB_CLIENT_SECRET=your_ib_client_secret_here

# Alpaca
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_api_secret_here

# TD Ameritrade
TD_CLIENT_ID=your_td_client_id_here
TD_REFRESH_TOKEN=your_td_refresh_token_here

# =============================================================================
# SOCIAL MEDIA APIs
# =============================================================================

# Reddit API
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USERNAME=your_reddit_username_here
REDDIT_PASSWORD=your_reddit_password_here

# Twitter API
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here

# Discord
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# =============================================================================
# DATABASE CONNECTIONS
# =============================================================================

# PostgreSQL (Primary Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=alpha_discovery
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# TimescaleDB (Time Series Data)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DB=market_data
TIMESCALE_USER=timescale
TIMESCALE_PASSWORD=your_timescale_password_here

# Redis (Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# =============================================================================
# CLOUD STORAGE
# =============================================================================

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET=alpha-discovery-data

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_use_strong_random_string
JWT_ALGORITHM=HS256

# OAuth 2.0
OAUTH2_CLIENT_ID=your_oauth2_client_id_here
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret_here

# API Security
API_SECRET_KEY=your_api_secret_key_here

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================

# Email (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# PagerDuty
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key_here

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Grafana
GRAFANA_API_KEY=your_grafana_api_key_here
GRAFANA_URL=http://localhost:3000

# Weights & Biases (ML Experiment Tracking)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=alpha-discovery

# MLflow (Model Registry)
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_S3_ENDPOINT_URL=https://s3.amazonaws.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Machine Learning APIs
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Financial Data Services
FINANCIAL_MODELING_PREP_API_KEY=your_fmp_api_key_here
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Database (SQLite for local development)
DEV_DATABASE_URL=sqlite:///alpha_discovery_dev.db

# Development Redis (Local)
DEV_REDIS_URL=redis://localhost:6379/0

# Testing
TEST_DATABASE_URL=sqlite:///alpha_discovery_test.db
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production Database
PROD_DATABASE_URL=postgresql://user:password@prod-db:5432/alpha_discovery

# Production Redis
PROD_REDIS_URL=redis://prod-redis:6379/0

# Production Secrets
PROD_SECRET_KEY=your_production_secret_key_here_use_very_strong_random_string

# =============================================================================
# DOCKER SETTINGS
# =============================================================================

# Docker Compose Environment
COMPOSE_PROJECT_NAME=alpha-discovery
DOCKER_REGISTRY=your-docker-registry.com

# Container Ports
WEB_PORT=8000
DASHBOARD_PORT=8501
GRAFANA_PORT=3000
REDIS_PORT=6379
POSTGRES_PORT=5432

# =============================================================================
# LOAD BALANCER & PROXY
# =============================================================================

# Nginx
NGINX_CONF_PATH=/etc/nginx/conf.d

# HAProxy
HAPROXY_STATS_USER=admin
HAPROXY_STATS_PASSWORD=your_haproxy_password_here

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_S3_BUCKET=alpha-discovery-backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# =============================================================================
# COMPLIANCE & REGULATORY
# =============================================================================

# Regulatory Reporting
FINRA_API_KEY=your_finra_api_key_here
SEC_API_KEY=your_sec_api_key_here

# Audit Trail
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
AUDIT_S3_BUCKET=alpha-discovery-audit-logs

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Worker Configuration
CELERY_WORKERS=4
GUNICORN_WORKERS=4
MAX_CONNECTIONS=1000

# Cache Configuration
CACHE_TTL=300  # 5 minutes
CACHE_MAX_SIZE=1000  # MB

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================

# Development Overrides
# DEV_INITIAL_CAPITAL=100000
# DEV_MAX_POSITION_SIZE=0.2
# DEV_ENABLE_PAPER_TRADING=true

# Production Overrides
# PROD_INITIAL_CAPITAL=10000000
# PROD_MAX_POSITION_SIZE=0.05
# PROD_ENABLE_LIVE_TRADING=true

# Staging Overrides
# STAGING_INITIAL_CAPITAL=1000000
# STAGING_MAX_POSITION_SIZE=0.1
# STAGING_ENABLE_PAPER_TRADING=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Replace all placeholder values with your actual credentials
# 2. Use strong, unique passwords and API keys
# 3. Keep this file secure and never commit it to version control
